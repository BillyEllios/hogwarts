{% extends 'base.html.twig' %}

{% block title %}Students index{% endblock %}

{% block body %}
    <h1>Students index</h1>

    <table class="table">
        <thead>
            <tr>
                <th>Id</th>
                <th>Student_fname</th>
                <th>Student_lname</th>
                <th>Student_birth</th>
                <th>Student_phone</th>
                <th>actions</th>
            </tr>
        </thead>
        <tbody>
        {% for student in students %}
            <tr>
                <td>{{ student.id }}</td>
                <td>{{ student.studentFname }}</td>
                <td>{{ student.studentLname }}</td>
                <td>{{ student.studentBirth ? student.studentBirth|date('Y-m-d') : '' }}</td>
                <td>{{ student.studentPhone }}</td>
                <td>
                    <a href="{{ path('app_students_show', {'id': student.id}) }}">show</a>
                    <a href="{{ path('app_students_edit', {'id': student.id}) }}">edit</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="6">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <a href="{{ path('app_students_new') }}">Create new</a>
{% endblock %}
